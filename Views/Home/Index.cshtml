@model ConversionMoneda.Models.ViewModels.IndexViewModel

<html>
	<head>
		<title>Conversion</title>
	</head>
  <body>

		<h1>Conversion de moneda</h1>
    <form action="~/Home/Index" method="post">
        <div>
            <label>Cantidad:</label>
            <input type="number" value="@Model.pesos" name="pesos" />
        </div>

        <div>
            <label >Convirtiendo a:</label>
            <select name="Moneda">
                <option value="mx"  @(Model.Moneda =="mx")>mx</option>
                <option value="us"  @(Model.Moneda =="us")>us</option>
            </select>
        </div>
        <input type="submit" value="Convertir" />
        <label>Total es:@Model.conversion.ToString("$0.00")</label>
    </form>

  </body>
</html>

